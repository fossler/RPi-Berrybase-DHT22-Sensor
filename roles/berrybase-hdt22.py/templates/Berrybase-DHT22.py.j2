#!/usr/bin/env python3
import os
import time
import Adafruit_DHT


DHT_SENSOR = Adafruit_DHT.DHT22
DHT_PIN = 4

try:
    f = open('{{ csv_file_path }}/{{ csv_file_name }}', 'a+')
    if os.stat('{{ csv_file_path }}/{{ csv_file_name }}').st_size == 0:
            f.write('#Date&Time,Temperature,Humidity\r\n')
except:
    pass

while True:
    humidity, temperature = Adafruit_DHT.read_retry(DHT_SENSOR, DHT_PIN)

    if humidity is not None and temperature is not None:
        f.write('{0},{1:0.1f},{2:0.1f}\r\n'.format(time.strftime('%Y-%m-%dT%H:%M:%S'), temperature, humidity))
        f.flush()
        print('Date: {0}, Time: {1}, Temp: {2:0.1f}Â°C, Humidity: {3:0.1f}%\r\n'.format(time.strftime('%m/%d/%y'), time.strftime('%H:%M'), temperature, humidity))
    else:
        print("Failed to retrieve data from humidity sensor")

    time.sleep({{ sleeptime }})
