#!/usr/bin/env python3
import os
import sys
import time
import Adafruit_DHT


DHT_SENSOR = Adafruit_DHT.DHT22
DHT_PIN = 4

while True:
    try:
      humidity, temperature = Adafruit_DHT.read_retry(DHT_SENSOR, DHT_PIN)
      if humidity is not None and temperature is not None:
        os.system('clear')
        print('Date: {0} Time: {1} \nTemp: {2:0.1f}Â°C  Humidity: {3:0.1f}%\r\n'.format(time.strftime('%m/%d/%y'), time.strftime('%H:%M:%S'), temperature, humidity))
        time.sleep(5)
      else:
        os.system('clear')
        print("Failed to retrieve data from humidity sensor")
    except KeyboardInterrupt:
      sys.exit()

